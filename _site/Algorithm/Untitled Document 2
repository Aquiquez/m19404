-- selection sort

selection_sort' :: [a]->[a]->Int->([a],Int)
selection_sort' sorted unsorted i= case unsorted of
		t | length(t)==0 || length(sorted)==0 ->(sorted,i)
		  | otherwise -> (min:sorted) ( delete min unsorted ) (i+1)
		where
		min=minimum unsorted
		selection_sort' _ = sorted unsorted i

selection_sort :: Ord a => [a]->([a],Int)
selection_sort s = selection_sort' [] s 0


